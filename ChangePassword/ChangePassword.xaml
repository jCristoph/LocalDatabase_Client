<Window x:Class="LocalDatabase_Client.ChangePassword.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalDatabase_Client.ChangePassword"
        mc:Ignorable="d"
        Title="ChangePassword" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="OldPasswordText" HorizontalAlignment="Left" Height="30" Margin="302,115,0,0" TextWrapping="Wrap" Text="Old Password"  VerticalAlignment="Top" Width="200"/>
        <TextBox  x:Name="NewPasswordText" HorizontalAlignment="Left" Height="30" Margin="302,168,0,0" TextWrapping="Wrap" Text="New Password" VerticalAlignment="Top" Width="200"/>
        <TextBox  x:Name="NewPasswordRepeatText"  HorizontalAlignment="Left" Height="30" Margin="302,219,0,0" TextWrapping="Wrap" Text="Repeat Your New Password" VerticalAlignment="Top" Width="200"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="331,298,0,0" VerticalAlignment="Top" Width="150" Height="30"/>

    </Grid>
</Window>
